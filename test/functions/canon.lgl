tag model is vec<3>;
tag coord hom<`t : vec<n>> is vec<n + 1>;

declare vec4 vec4(vec<3> v, float f);
declare vec3 vec3(vec<4> v);

canon hom<`t> homify<`t : vec<3>>(`t v) { return vec4(v, 1.) as hom<`t>; }

attribute model aPosition;

void main() {
    aPosition = [1., 1., 1.];
    print homify(aPosition);
}